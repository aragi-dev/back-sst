{
  "compilerOptions": {
    // Environment setup & latest features
    "lib": [
      "ESNext"
    ],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,
    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,
    // tsyringe
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@docEntity/*": [
        "core/docProcessor/entities/*"
      ],
      "@docInterfaceRepository/*": [
        "core/docProcessor/interfaces/*"
      ],
      "@docRepository/*": [
        "core/docProcessor/repositories/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@docApi/*": [
        "docProcessor/api/*"
      ],
      "@docInterface/*": [
        "docProcessor/interfaces/*"
      ],
      "@docService/*": [
        "docProcessor/services/*"
      ],
      "@dbBase/*": [
        "utils/dbBase/*"
      ],
    }
  },
  "include": [
    "core",
    "docProcessor",
    "sst-env.d.ts",
    "sst.config.ts",
    "utils",
  ]
}